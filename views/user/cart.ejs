<script>
  function prodQtyChange(prodId,count){
    count = parseInt(count)
    $.ajax({
      url:'/changeQuantity',
      data:{
        prodId : prodId,
        count : count
      },
      method : 'post',
      success:(response)=>{
        if(response.change){
          location.reload()
          console.log('Change Successfully')
        }else{
          location.reload()
          console.log('Change Unsuccessful');
        }
      }
    })
  }
</script>

